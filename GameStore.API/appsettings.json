{
  "ConnectionStrings": {
    "GameStoreDb": "Data Source=.\\SQLEXPRESS;Integrated Security=True;Initial Catalog=GameStoreDb;",
    "NorthwindDb": "mongodb://localhost:27017",
    "NorthwindDbName": "Northwind"
  },

  "BankTimeOut": "1440",
  "IBoxTimeOut": "15",
  "VisaTimeout": "15",

  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": ".\\Logs\\log.txt",
          "outputTemplate": "{Timestamp} [{Level}] {SourceContext}{Message}{NewLine:1}{Exception:1}",
          "fileSizeLimitBytes": "1000000",
          "columnOptionsSection": {
            "removeStandardColumns": [ "Properties" ]
          },
            "rollOnFileSizeLimit": true,
            "rollingInterval": "Day"
          }
        },
      {
        "Name": "MongoDBBson",
        "Args": {
          "databaseUrl": "mongodb://localhost:27017/Northwind",
          "collectionName": "logs",
          "outputTemplate": "{Timestamp} [{Level}] {SourceContext}{Message}{NewLine:1}{Exception:1}",
          "cappedMaxSizeMb": "1024",
          "cappedMaxDocuments": "50000"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithClientIp"
    ],
    "Properties": {
      "ApplicationName": "Serilog.WebApplication"
    }
  },
  "AllowedHosts": "*"
}
